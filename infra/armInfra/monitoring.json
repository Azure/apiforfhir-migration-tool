{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "logAnalyticsName": {
            "type": "string",
            "metadata": {
                "description": "Name for LogAnalytics"
            },
            "defaultValue": ""
        },
        "appInsightsName": {
            "type": "string",
            "metadata": {
                "description": "Name for Application Insight"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for resource"
            }
        },
        "appTags": {
            "type": "object",
            "metadata": {
                "description": "tags for resource"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('logAnalyticsName')]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2020-03-01-preview",
            "location": "[parameters('location')]",
            "tags": "[parameters('appTags')]",
            "properties": {
                "retentionInDays": 30,
                "sku": {
                "name": "PerGB2018"
                }
            }
        },
        {
           "type": "Microsoft.Insights/diagnosticSettings",
           "apiVersion": "2021-05-01-preview",
           "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsName'))]"
            ],
           "location": "[parameters('location')]",
           "name": "settingsMig",
           "scope": "[format('Microsoft.OperationalInsights/workspaces/{0}', parameters('logAnalyticsName'))]",
           "properties": {
                "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsName'))]",
                "logs": [
                    {
                        "category": "Audit",
                        "enabled": true,
                        "retentionInDays": 30
                    }
                ],
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true,
                        "retentionInDays": 30
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02-preview",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsName'))]"
            ],
            "name": "[parameters('appInsightsName')]",
            "location": "[parameters('location')]",
            "kind": "web",
            "properties": {
                "Application_Type": "web",
                "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsName'))]",
                "publicNetworkAccessForIngestion": "Enabled",
                "publicNetworkAccessForQuery": "Enabled"
            },
            "tags": "[parameters('appTags')]"
        }
    ],
    "outputs": {
        "appInsightsInstrumentationKey": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('appInsightsName')), '2020-02-02-preview', 'Full').properties.InstrumentationKey]"
        },
        "appInsightsInstrumentationString": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('appInsightsName')), '2020-02-02-preview', 'Full').properties.ConnectionString]"
        }
    }
}