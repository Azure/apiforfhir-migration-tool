{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "defaultValue": "migfuncsa",
            "metadata": {
                "description": "Name of storage account"
            }
        },
        "appServiceName": {
            "type": "string",
            "metadata": {
                "description": "Name of App Service"
            }
        },
        "functionAppName": {
            "type": "string",
            "metadata": {
                "description": "Function App name"
            }
        },
        "appInsightsInstrumentationKey": {
            "type": "string",
            "metadata": {
                "description": "App Insights Key"
            }
        },
        "appInsightsInstrumentationString": {
            "type": "string",
            "metadata": {
                "description": "App Insights string"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for resources"
            }
        },
        "functionSettings": {
            "type": "object",
            "metadata": {
                "description": "Settings"
            }
        },
        "appTags": {
            "type": "object",
            "metadata": {
                "description": "Tags"
            }
        },
        "apiForFhirName": {
            "type": "string",
            "metadata": {
                "description": "Api for FHIR Name"
            }
        },
        "fhirServiceName": {
            "type": "string",
            "metadata": {
                "description": "Fhir Service Name"
            }
        },
        "createRoleAssignment": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "flag for role assignment creation"
            }
        }
    },
    "functions": [],
    "variables": {
        "array": "[split(parameters('fhirServiceName'), '/')]",
        "serviceName": "[variables('array')[0]]",
        "workspaceName": "[variables('array')[1]]"
    },
    "resources": [
        {
            "condition": false,
            "type": "Microsoft.HealthcareApis/workspaces",
            "apiVersion": "2022-10-01-preview",
            "name": "[variables('workspaceName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('appTags')]",
            "resources": [
                {
                    "condition": false,
                    "type": "fhirservices",
                    "dependsOn": [
                        "[resourceId('Microsoft.HealthcareApis/workspaces', variables('workspaceName'))]"
                    ],
                    "apiVersion": "2021-06-01-preview",
                    "name": "[variables('serviceName')]",
                    "location": "[parameters('location')]",
                    "kind": "fhir-R4"
                }
            ]
        },
        {
            "condition": false,
            "type": "Microsoft.HealthcareApis/services",
            "apiVersion": "2021-11-01",
            "name": "[parameters('apiForFhirName')]",
            "location": "[parameters('location')]",
            "kind": "fhir-R4",
            "properties": {
                "cosmosDbConfiguration": {
                    "offerThroughput": 99500
                },
            "exportConfiguration": {
                    "storageAccountName": ""
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[parameters('location')]",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2021-08-01",
            "tags": "[parameters('appTags')]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-03-01",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "name": "[parameters('appServiceName')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('appTags')]",
            "kind": "functionapp",
            "sku": {
                "tier": "Standard",
                "name": "S2"
            },
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-03-01",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServiceName'))]"
            ],
            "name": "[parameters('functionAppName')]",
            "location": "[parameters('location')]",
            "kind": "functionapp,linux",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "httpsOnly": true,
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServiceName'))]",
                "clientAffinityEnabled": true,
                "siteConfig": {
                    "linuxFxVersion":"dotnet-isolated|7.0",
                    "use32BitWorkerProcess": false,
                    "alwaysOn": true
                }
            },
            "resources": [
                {
                    "type": "basicPublishingCredentialsPolicies",
                    "name": "ftp",
                    "apiVersion": "2022-09-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
                    ],
                    "location": "[parameters('location')]",
                    "properties": {
                        "allow": false
                    }
                },
                {
                    "type": "basicPublishingCredentialsPolicies",
                    "name": "scm",
                    "apiVersion": "2022-09-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
                    ],
                    "location": "[parameters('location')]",
                    "properties": {
                        "allow": false
                    }
                },
                {
                    "type": "config",
                    "apiVersion": "2020-12-01",
                    "name": "appSettings",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
                    ],
                    "properties": {
                        "DestinationFhirUri": "[format('https://{0}.fhir.azurehealthcareapis.com', replace(parameters('fhirServiceName'), '/', '-'))]",
                        "SourceFhirUri": "[format('https://{0}.azurehealthcareapis.com', parameters('apiForFhirName'))]",
                        "StartDate": "1970-01-01",
                        "ScheduleInterval": 5,
                        "AppInsightConnectionKey": "[parameters('appInsightsInstrumentationKey')]",
                        "AppInsightConnectionString": "[parameters('appInsightsInstrumentationString')]",
                        "ImportMode": "IncrementalLoad",
                        "SurfaceCheckResources": "",
                        "DeepCheckCount": "",
                        "UserAgent": "FhirMigrationTool",
                        "SourceHttpClient": "SourceFhirEndpoint",
                        "DestinationHttpClient": "DestinationFhirEndpoint",
                        "TokenCredential":"",
                        "RetryCount": 3,
                        "WaitForRetry": 1,
                        "Debug": true,
                        "ExportTableName": "export",
                        "ChunkTableName": "doChunk",
                        "ExportChunkTime": 12,
                        "PartitionKey": "partitionkey",
                        "RowKey": "rowkey"
                    }
                } 
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "fhir-migration-function-apiforfhir-managed-id-role-assignment",
            "location": "[parameters('location')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "roleAssignment.json"
                },
                "parameters": {
                    "resourceId": {
                        "value": "[resourceId('Microsoft.HealthcareApis/services', parameters('apiForFhirName'))]"
                    },
                    "roleId": {
                        "value": "4465e953-8ced-4406-a58e-0f6e3f3b530b"
                    },
                    "principalId": {
                        "value": "[reference(resourceId('Microsoft.Web/sites', parameters('functionAppName'))).identity.principalId]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2022-09-01",
            "name": "fhir-migration-function-fhir-managed-id-role-assignment",
            "location": "[parameters('location')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "roleAssignment.json"
                },
                "parameters": {
                    "resourceId": {
                        "value": "[resourceId('Microsoft.HealthcareApis/workspaces/fhirservices', variables('workspaceName'), variables('serviceName'))]"
                    },
                    "roleId": {
                        "value": "3db33094-8700-4567-8da5-1501d4e7e843"
                    },
                    "principalId": {
                        "value": "[reference(resourceId('Microsoft.Web/sites', parameters('functionAppName'))).identity.principalId]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "functionAppKey": {
            "type": "string",
            "value": "[listKeys(concat(resourceId('Microsoft.Web/sites', parameters('functionAppName')), '/host/default'), '2016-08-01').functionKeys.default]"
        },
        "functionAppName": {
            "type": "string",
            "value": "[parameters('functionAppName')]"
        },
        "functionAppPrincipalId": {
            "type": "string",
            "value": "reference(resourceId('Microsoft.Web/sites', parameters('functionAppName'))).identity.principalId"
        },
        "hostName": {
            "type": "string",
            "value": "reference(resourceId('Microsoft.Insights/components', parameters('functionAppName'))).identity.properties.defaultHostName"
        },
        "functionBaseUrl": {
            "type": "string",
            "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('functionAppName'))).identity.properties.defaultHostName)]"
        }
    }
}